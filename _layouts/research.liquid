--- 
layout: default
---

<div class="post research">
  {% for section in site.data.research %}
    <section id="{{ section.id }}">
      <h2>{{ section.name }}</h2>
      {% for item in section.items %}
        <div class="research-item">
          <h3>{{ item.title }}</h3>
          <p>{{ item.abstract }}</p>
          <a href="{{ item.link }}">Read more</a>
        </div>
      {% endfor %}
    </section>
  {% endfor %}
</div>

