--- 
layout: default
---
{% contentfor toc-sidebar %}
  <ul class="nav flex-column">
    {% for section in page.sections %}
      <li class="nav-item">
        <a class="nav-link" href="#{{ section.id }}">{{ section.name }}</a>
      </li>
    {% endfor %}
  </ul>
{% endcontentfor %}

<div class="post research">
 <!-- Main content -->
    {% for section in page.sections %}
      <section id="{{ section.id }}">
        <h2>{{ section.name }}</h2>
        {% assign items = site.data.research[section.id] %}
        {% for item in items %}
          <div class="research-item">
            <h3>{{ item.title }}</h3>
            <p>{{ item.abstract }}</p>
            <a href="{{ item.link }}">Read more</a>
          </div>
        {% endfor %}
      </section>
    {% endfor %}
</div>
  
  
